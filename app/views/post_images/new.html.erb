<section class="new-image-comment">
	<div class="container">
		<div class="row">
		  <div class="col-md-12">
		  	<div class="row">
             <div class="col-md-6 col-md-offset-3 post_image_form">
              <div class="section-title-wrapper style-1 v1">
              <h3>新規投稿</h3>
            </div>
			<%= form_for(@post_image) do |f| %>

			   <div class="row">
			   	<div class="col-sm-12">
			   		<%= f.attachment_field :image %>
			   	</div>
			   </div><br>

			   <div class="row">
			   	<div class="col-sm-6">
			   		<%= f.text_field :image_title, class: "form-control", maxlength:'30', placeholder:"タイトル  30字" %>
			   	</div>
			   </div>

			   <div class="row">
			   	<div class="col-sm-12">
			   		<%= f.text_area :comment, class: "form-control", maxlength:'800', placeholder:"コメント  800字" %>
			   	</div>
			   </div><br>

			   <%= f.submit "投稿", class: "btn btn-primary" %>
			<% end %>
		  </div>
	    </div>
	</div>
</section>
